# API keys (Replace with your actual keys)
OPENAI_API_KEY=OPENAI_API_KEY
# GOOGLE_API_KEY=GOOGLE_API_KEY # Not required for deployment
SERPER_API_KEY=SERPER_API_KEY
# HUGGINGFACE_API_KEY=HUGGINGFACE_API_KEY # Not required for deployment

# ChromaDB Configuration
# Uncomment and modify these values as needed

# ChromaDB Server Settings (for remote ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ChromaDB Storage Path (for local persistent storage)
# Set to empty or remove this line to use remote server
CHROMA_PERSIST_DIR=./vectordb

# Collection Names
CHROMA_LEGAL_CASES_COLLECTION=legal_cases
CHROMA_LEGISLATION_COLLECTION=legislation

# PostgreSQL Configuration (if needed)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=ila_system
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password
# POSTGRES_SSL_MODE=prefer

# Example configurations:

# For local development:
# CHROMA_PERSIST_DIR=./dev_vectordb
# CHROMA_LEGAL_CASES_COLLECTION=dev_legal_cases
# CHROMA_LEGISLATION_COLLECTION=dev_legislation

# For production with remote ChromaDB:
# CHROMA_HOST=production-chroma.example.com
# CHROMA_PORT=8000
# CHROMA_PERSIST_DIR=
# CHROMA_LEGAL_CASES_COLLECTION=prod_legal_cases
# CHROMA_LEGISLATION_COLLECTION=prod_legislation

